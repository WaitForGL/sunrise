<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunrise.mapper.CalendarYearMapper">

    <resultMap type="com.sunrise.domain.CalendarYear" id="CalendarYearResult">
        <result property="id"    column="id"    />
        <result property="calendar"    column="calendar"    />
        <result property="waterAmount"    column="water_amount"    />
        <result property="stationId"    column="station_id"    />
    </resultMap>


    <sql id="selectCalendarYear">
        select id, calendar,water_amount,station_id
        from calendar_year
    </sql>


    <select id="selectList" parameterType="com.sunrise.domain.CalendarYear" resultMap="CalendarYearResult">
        <include refid="selectCalendarYear"/>
        <where>
            <if test="userName != null "> and user_name = #{userName}</if>
            <if test="belongArea != null "> and belong_area = #{belongArea}</if>
        </where>
    </select>

    <select id="waterYearList" parameterType="com.sunrise.domain.CalendarYear" resultMap="CalendarYearResult">
        <include refid="selectCalendarYear"/>
        <where>
            <if test="stationId != null "> and station_id = #{stationId}</if>
        </where>
        order by calendar asc
    </select>

    <insert id="addWaterYear" parameterType="com.sunrise.domain.CalendarYear">
        insert into calendar_year
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="calendar != null">calendar,</if>
            <if test="waterAmount != null">water_amount,</if>
            <if test="stationId != null">station_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="calendar != null">#{calendar},</if>
            <if test="waterAmount != null">#{waterAmount},</if>
            <if test="stationId != null">#{stationId},</if>
        </trim>
    </insert>



    <update id="editWaterYear" parameterType="com.sunrise.domain.CalendarYear">
        update calendar_year
        <trim prefix="SET" suffixOverrides=",">
            <if test="calendar != null">calendar = #{calendar},</if>
            <if test="waterAmount != null">water_amount = #{waterAmount},</if>
            <if test="stationId != null">station_id = #{stationId},</if>
        </trim>
        where id = #{id}
    </update>

    <select id="selectStationById" parameterType="Long" resultType="String">
        select water_amount from calendar_year
        <where>
            <if test="stationId != null "> and station_id = #{stationId}</if>
        </where>
        order by calendar desc
        limit 3
    </select>







    <delete id="deleteUser" parameterType="Long">
        delete from water_user where user_id = #{userId}
    </delete>

    <delete id="deleteWaterStationByIds" parameterType="String">
        delete from water_station where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>